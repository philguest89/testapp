 	<body>
 		<nav>
	 		<div>
	 			<div>
		 			<a href="/">Home</a>
		 		</div>
		 		<div>
		 			<ul>
		 				<% if(!currentUser){ %>
		 				<li><a href="/teacher">Login</a></li>
